<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Default profile: Console + File logging -->
    <springProfile name="!stdio">
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE:-logs/zdfmediathek-mcp.log}</file>
            <encoder>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE:-logs/zdfmediathek-mcp.log}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- Stdio profile: File logging ONLY, NO console output -->
    <springProfile name="stdio">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- Use /tmp instead of logs/ to avoid permission issues in Docker -->
            <file>${LOG_FILE:-/tmp/zdfmediathek-mcp.log}</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %-40.40logger{39} : %m%n%wEx</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE:-/tmp/zdfmediathek-mcp.log}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
        </appender>

        <!-- Root logger with FILE appender only - NO console output -->
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>